signal=x1;
N=size(signal);
N=N(1);
Nf=8*2^nextpow2(N);
Fs=1;
x = 0:Fs/Nf:(Nf-1)/Nf*Fs;

h=hamming(N);
y = fft(signal, Nf);
yfenetre = fft(signal.*h, Nf);
y = 1/N*abs(y).^2;

val=1;
for i=1:4
    
    
    subplot(4,3,val);
    plot(signal);
    subplot(4,3,val+1);
    plot(x, y);
    subplot(4,3,val+2);
    plot(x,yfenetre);
    val=val+3;
end
set(gca,'xlim',[0,Fs/2]);

